@using ACKCMS.Models
@model ACKCMS.Models.CMS_ARTICULO

@{
    ViewBag.Title = Model.TITULO;
}
<a href="#" class="bordered-feature-image" style="margin-bottom: 0;"><img src="@Model.URLIMAGEN" alt="" /></a>

<div id="content-wrapper">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="3u">

                    <!-- Sidebar -->
                    <section>
                        <header>
                            <h2>Artículos Destacados</h2>
                        </header>
                        <ul class="link-list">
                            @foreach (CMS_ARTICULO articulo in ViewBag.Articles)
                            {
                                <li><a href="@Url.Action("Art", "Home", new {id = articulo.ID_ARTICULO})">@articulo.TITULO</a></li>
                            }
                        </ul>
                    </section>
                    <section>
                        <header>
                            <h2>Otros artículos</h2>
                        </header>
                        <ul class="link-list">
                            @foreach (CMS_ARTICULO articulo in ViewBag.NotMainArticles)
                            {
                                <li><a href="@Url.Action("Art", "Home", new {id = articulo.ID_ARTICULO})">@articulo.TITULO</a></li>
                            }
                        </ul>
                    </section>

                </div>
                <div class="9u important(collapse)">

                    <!-- Main Content -->
                    <section>
                        <header>
                            <h2>@Model.TITULO</h2>
                        </header>
                        <p>@Html.Raw(Model.CONTENIDO)</p>
                        <input type="button" value="Volver" onclick=" window.location='@Url.Action("Index", "Home")' ; " />
                    </section>

                </div>
            </div>
        </div>
    </div>
</div>
