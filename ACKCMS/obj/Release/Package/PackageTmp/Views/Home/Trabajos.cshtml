@{
    ViewBag.Title = "Envío de resúmenes";
}

<div class="wrapper style2">
    <section class="container">
        <div class="row double">
            <div class="12u">
                <h3>Envío de resúmenes</h3>
            </div>

            @if (ViewBag.Result != null)
            {
                <div class="12u" style="color: red;">
                    <hr />
                    <h2>@ViewBag.Result</h2>
                    <p>Puede realizar otra búsqueda de la misma manera con el formulario a continuación.</p>
                </div>
            }

            @using (Html.BeginForm())
            {
                <div class="12u">
                    <hr />
                    <p>Ingrese su DNI y haga click en ingresar.</p>
                    <p>
                        <label for="DNI">DNI</label>
                        <input type="text" name="DNI" id="DNI" />
                    </p>
                    <p>
                        <input type="submit" value="Ingresar" />
                    </p>
                </div>
            }
        </div>
    </section>
</div>