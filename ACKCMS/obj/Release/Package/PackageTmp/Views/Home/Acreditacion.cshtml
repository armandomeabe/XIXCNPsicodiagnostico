            </div>
            <div class="row"></div>
            <div class="row">
                <div class="12u">
                    <div>
                        <label class="control-label col-md-2">Opción de pago</label>
                        <select id="opcionDePago" name="opcionDePago">
                            @if (DateTime.Now <= new DateTime(2015, 04, 30))
                            {
                                <option value="Socios - ARS 750">Socios - $ 750</option>
                                <option value="No socios - ARS 1000">No socios - $ 1000</option>
    <option value="Estudiantes graduados hasta 3 años - ARS 125">Estudiantes graduados hasta 3 años - $ 125</option>
                            }
                            else if (DateTime.Now <= new DateTime(2015, 07, 30))
                            {
                                <option value="Socios - ARS 875">Socios - $ 875</option>
    <option value="No socios - ARS 1125">No socios - $ 1125</option>
    <option value="Estudiantes graduados hasta 3 años - ARS 190">Estudiantes graduados hasta 3 años - $ 190</option>
                            }
                            else
                            {
                                <option value="Socios - ARS 975">Socios - $ 975</option>
    <option value="No socios - ARS 1240">No socios - $ 1240</option>
    <option value="Estudiantes graduados hasta 3 años - ARS 310">Estudiantes graduados hasta 3 años - $ 310</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="12u">
                    <div>
                        <h2>Inscripción y Aranceles</h2>
                        <ul>
                            <li><sup>1</sup> incluye presentación de hasta 2 resúmenes y participación en todos los eventos de las Jornadas que se detallan en el programa.</li>
                            <li><sup>2</sup> Socios de la AAF con la cuota 2015 al día tendrán 30% de descuento.</li>
                            <li><sup>3 (estudiante)</sup> No válida la presentación de resúmenes.</li>
                        </ul>
                    </div>
                </div>
                <div class="12u">
                    <input type="submit" value="Acreditar" />
                </div>
            </div>
        </div>
    </section>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
