@model ACKCMS.Models.Accreditation

@{
    ViewBag.Title = "Acreditación Online";
}

<style type="text/css">
    input {
        width: 100%;
    }
</style>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <section class="container">

        <div class="row">
            <div class="6u">
                <h3>
                    Formulario de Acreditación <i>On Line</i>
                </h3>
                <h2>
                    Por favor complete la información solicitada. Los campos marcados con <span style="color: red;">*</span> son obligatorios.
                </h2>
                <hr />
                <h4>Se le recuerda a continuación la información bancaria para realizar el pago de su acreditación.</h4>
                <p>
                    DEPÓSITOS <br />
                    Caja de Ahorro Especial<br />
                    Asociación Argentina de Estudio e Investigación en Psicodiagnóstico<br />
                    Banco Nación<br />
                    Sucursal: 3020 Rosario<br />
                    N°: 444256367 / 5<br />
                    CBU: 01104442 - 400444 - 25636758<br />
                    CUIT: 30-65337374-7
                </p>
            </div>
            <div class="2u">
                <img src="@Url.Content("~/images/register.png")" style="width: 92%; margin-top: -25px;" />
            </div>
            <div class="row">&nbsp;</div>
            <div class="12u">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(x => x.AcreditacionRealizada)
                @Html.HiddenFor(x => x.AcreditacionComprobanteNro)
                @Html.HiddenFor(x => x.FechaAcreditacion)
                @Html.HiddenFor(x => x.EleccionDePago)
                @Html.HiddenFor(x => x.NumeroMatricula)
                @Html.HiddenFor(x => x.NumeroSocio)

                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color: red;">*</span>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color: red;">*</span>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Profesion, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color: red;">*</span>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Profesion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Profesion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Pais, htmlAttributes: new { @class = "control-label col-md-2" }) <span style="color: red;">*</span>
