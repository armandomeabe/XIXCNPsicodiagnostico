@model IEnumerable<AcreditacionesBackend.Models.WorkArea>

@{
    ViewBag.Title = "Index";
}

<h2>Modalidades: Nombre y Coordinadores</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coordinadores)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.Raw(AcreditacionesBackend.Utils.HtmlRemoval.StripTagsRegex(item.Coordinadores))
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                        Acciones
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                        <li role="presentation" class="dropdown-header">Elija una opción</li>

                        <li role="presentation" class="dropdown-header">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</li>
                        <li role="presentation" class="dropdown-header">@*@Html.ActionLink("Ver", "Details", new { id = item.Id })*@</li>
                        <li role="presentation" class="dropdown-header">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</li>
                    </ul>
                </div>
            </td>






        </tr>
    }

</table>
